{
    "name": "@nlib/lint-commit",
    "publishConfig": {
        "access": "public"
    },
    "version": "0.1.4",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "homepage": "https://github.com/nlibjs/lint-commit",
    "repository": "https://github.com/nlibjs/lint-commit",
    "engines": {
        "node": ">=12"
    },
    "main": "lib/index.js",
    "files": [
        "lib",
        "!*.test.*",
        "!*.map"
    ],
    "bin": {
        "nlib-lint-commit": "lib/cli.js"
    },
    "scripts": {
        "build": "run-s build:*",
        "build:index": "indexen --input src --output src/index.ts",
        "build:tsc": "tsc",
        "test": "run-s test:*",
        "test:type": "tsc --noEmit",
        "test:ava": "ava",
        "lint": "eslint --ext .ts --ext .js src",
        "version": "run-s version:changelog version:add",
        "version:changelog": "nlib-changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "dependencies": {
        "@nlib/global": "3.18.0",
        "@nlib/nodetool": "0.1.17",
        "@nlib/typing": "0.2.0",
        "semver": "7.3.5"
    },
    "devDependencies": {
        "@nlib/changelog": "0.1.9",
        "@nlib/eslint-config": "3.17.23",
        "@nlib/githooks": "0.0.5",
        "@nlib/test": "3.18.7",
        "@types/node": "15.14.7",
        "@types/semver": "7.3.8",
        "@typescript-eslint/eslint-plugin": "4.29.0",
        "@typescript-eslint/parser": "4.29.0",
        "ava": "3.15.0",
        "eslint": "7.32.0",
        "lint-staged": "10.5.4",
        "npm-run-all": "4.1.5",
        "ts-node": "9.1.1",
        "typescript": "4.3.5"
    },
    "ava": {
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "timeout": "1m"
    },
    "eslintConfig": {
        "extends": [
            "@nlib"
        ],
        "env": {
            "node": true
        },
        "rules": {
            "@nlib/no-globals": [
                "error",
                {
                    "allowed": [
                        "module",
                        "process",
                        "require",
                        "__dirname"
                    ]
                }
            ]
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ],
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
