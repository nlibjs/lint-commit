{
    "name": "@nlib/lint-commit",
    "publishConfig": {
        "access": "public"
    },
    "version": "0.2.0",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://gojabako.zone"
    },
    "homepage": "https://github.com/nlibjs/lint-commit",
    "repository": "https://github.com/nlibjs/lint-commit",
    "engines": {
        "node": ">=14"
    },
    "type": "module",
    "main": "./lib/index.mjs",
    "files": [
        "lib",
        "!**/*.test.*"
    ],
    "bin": {
        "lint-commit": "./lib/cli.mjs",
        "nlib-lint-commit": "./lib/cli.mjs"
    },
    "scripts": {
        "build": "run-s build:*",
        "build:tsc": "tsc",
        "build:esmify": "esmify \"lib/**\"",
        "test": "run-s test:*",
        "test:build": "run-s test:build:*",
        "test:build:tsc": "tsc",
        "test:build:esmify": "esmify --keepSourceMap \"lib/**\"",
        "test:unit": "ava",
        "lint": "eslint --ext .ts --ext .js src",
        "version": "run-s build version:*",
        "version:changelog": "nlib-changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "dependencies": {
        "commander": "9.4.0",
        "semver": "7.3.7"
    },
    "devDependencies": {
        "@nlib/changelog": "0.2.3",
        "@nlib/eslint-config": "3.18.0",
        "@nlib/esmify": "0.3.2",
        "@nlib/githooks": "0.1.0",
        "@types/node": "18.7.13",
        "@types/semver": "7.3.12",
        "@typescript-eslint/eslint-plugin": "5.35.1",
        "@typescript-eslint/parser": "5.35.1",
        "ava": "4.3.3",
        "eslint": "8.23.0",
        "lint-staged": "13.0.3",
        "npm-run-all": "4.1.5",
        "typescript": "4.8.2"
    },
    "eslintConfig": {
        "extends": [
            "@nlib/eslint-config"
        ],
        "env": {
            "node": true
        },
        "rules": {
            "@nlib/no-globals": "off"
        }
    },
    "ava": {
        "files": [
            "lib/**/*.test.{ts,tsx,js,mjs,cjs,jsx}"
        ]
    },
    "lint-staged": {
        "*.{ts,tsx,js,mjs,cjs,jsx}": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
